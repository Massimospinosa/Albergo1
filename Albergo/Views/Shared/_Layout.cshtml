<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Albergone</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-warning fw-bold">
        <div class="container">
            @Html.ActionLink("Albergone", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Attiva/Disattiva spostamento" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                    <li class="mx-3">@Html.ActionLink("Aggiungi Prenotazione", "AddPren", "Prenotazioni", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="me-3">@Html.ActionLink("Informazioni", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contatto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                <ul class="navbar-nav text-white">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @using (Html.BeginForm("Logout", "Login"))
                            {
                                @Html.AntiForgeryToken()
                                <button class="dropdown-item text-dark fw-bold">Logout</button>
                            }
                        </li>
                    }
                    else
                    {
                        <li class="text-dark">@Html.ActionLink("Login", "Index", "Login", new { area = "" }, new { @class = "dropdown-item" })</li>

                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()

        <footer class="text-center mt-5">
            <hr />
            <p>&copy; @DateTime.Now.Year - Albergone</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
